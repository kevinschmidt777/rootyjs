{
  "name": "rootyjs",
  "version": "0.1.0",
  "description": "RootyJS is a Node.js framework for building modern APIs. Written in TypeScript and based on Fastify.",
  "main": "./dist/index.js",
  "scripts": {
    "test": "jest tests",
    "coverage": "jest --collectCoverageFrom=**/*.test.ts --coverage",
    "build": "esbuild src/index.ts --outfile=dist/index.js --bundle --minify --platform=node --target=node10.4",
    "start": "ts-node-dev ./src/index.ts"
  },
  "keywords": [
    "rooty, rootyjs, node, nodejs, express, fastify, api, fast, performance, framework"
  ],
  "homepage": "https://rootyjs.com",
  "author": "Kevin Schmidt",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/kevinschmidt777/rootyjs.git"
  },
  "bugs": {
    "url": "https://github.com/kevinschmidt777/rootyjs/issues"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "dependencies": {
    "@prisma/client": "3.9.2",
    "dotenv": "16.0.0",
    "fastify": "3.27.2",
    "fastify-cors": "6.0.2"
  },
  "devDependencies": {
    "@types/jest": "27.4.0",
    "@types/node": "17.0.19",
    "esbuild": "0.14.23",
    "jest": "27.5.1",
    "prisma": "3.9.2",
    "ts-jest": "27.1.3",
    "ts-node-dev": "1.1.8",
    "typescript": "4.5.5"
  }
}
