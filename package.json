{
	"name": "rootyjs",
	"version": "0.1.0",
	"description": "RootyJS is a Node.js framework for building modern APIs. Written in TypeScript and based on Fastify.",
	"main": "./dist/index.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"build": "tsc -p tsconfig.json",
		"start": "nodemon index.ts",
		"start-production": "node ./dist/index.js"
	},
	"keywords": [
		"rooty, rootyjs, node, nodejs, express, fastify, api, fast, performance, framework"
	],
	"homepage": "https://rootyjs.com",
	"author": "Kevin Schmidt",
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "https://github.com/kevinschmidt777/rootyjs.git"
	},
	"prettier": {
		"printWidth": 120,
		"tabWidth": 4,
		"useTabs": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "es5",
		"bracketSpacing": true,
		"jsxBracketSameLine": false,
		"arrowParens": "always"
	},
	"dependencies": {
		"dotenv": "8.2.0",
		"fastify": "3.14.2"
	},
	"devDependencies": {
		"@types/node": "14.14.41",
		"nodemon": "2.0.7",
		"prettier": "2.2.1",
		"ts-node": "9.1.1",
		"typescript": "4.2.4"
	}
}
