{
	"name": "rootyjs",
	"version": "0.1.0",
	"description": "RootyJS is a Node.js framework for building modern APIs. Written in TypeScript and based on Fastify.",
	"main": "./dist/index.js",
	"scripts": {
		"test": "jest tests",
		"coverage": "jest --collectCoverageFrom=**/*.test.ts --coverage",
		"build": "tsc -p tsconfig.json",
		"start": "nodemon index.ts",
		"start-production": "node ./dist/index.js"
	},
	"keywords": [
		"rooty, rootyjs, node, nodejs, express, fastify, api, fast, performance, framework"
	],
	"homepage": "https://rootyjs.com",
	"author": "Kevin Schmidt",
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "https://github.com/kevinschmidt777/rootyjs.git"
	},
	"bugs": {
		"url": "https://github.com/kevinschmidt777/rootyjs/issues"
	},
	"prettier": {
		"printWidth": 120,
		"tabWidth": 4,
		"useTabs": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "es5",
		"bracketSpacing": true,
		"jsxBracketSameLine": false,
		"arrowParens": "always"
	},
	"jest": {
		"transform": {
			"^.+\\.ts?$": "ts-jest"
		}
	},
	"dependencies": {
		"dotenv": "8.2.0",
		"fastify": "3.14.2",
		"fastify-cors": "5.2.0",
		"mysql2": "2.2.5",
		"sequelize": "6.6.2"
	},
	"devDependencies": {
		"@types/jest": "26.0.22",
		"@types/node": "14.14.41",
		"jest": "26.6.3",
		"nodemon": "2.0.7",
		"prettier": "2.2.1",
		"ts-jest": "26.5.5",
		"ts-node": "9.1.1",
		"typescript": "4.2.4"
	}
}
