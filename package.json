{
	"name": "rootyjs",
	"version": "1.0.0",
	"description": "RootyJS is a Node.js framework for building modern APIs. Written in TypeScript and based on Fastify.",
	"main": "./dist/index.js",
	"scripts": {
		"test": "jest tests",
		"coverage": "jest --collectCoverageFrom=**/*.test.ts --coverage",
		"build": "tsc -p tsconfig.json",
		"start": "nodemon index.ts",
		"start-production": "node ./dist/index.js"
	},
	"keywords": [
		"rooty, rootyjs, node, nodejs, express, fastify, api, fast, performance, framework"
	],
	"homepage": "https://rootyjs.com",
	"author": "Kevin Schmidt",
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "https://github.com/kevinschmidt777/rootyjs.git"
	},
	"bugs": {
		"url": "https://github.com/kevinschmidt777/rootyjs/issues"
	},
	"prettier": {
		"printWidth": 120,
		"tabWidth": 4,
		"useTabs": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "es5",
		"bracketSpacing": true,
		"jsxBracketSameLine": false,
		"arrowParens": "always"
	},
	"jest": {
		"transform": {
			"^.+\\.ts?$": "ts-jest"
		}
	},
	"dependencies": {
		"@prisma/client": "^2.30.1",
		"dotenv": "10.0.0",
		"fastify": "3.22.0",
		"fastify-cors": "6.0.2",
		"pm2": "5.1.2"
	},
	"devDependencies": {
		"@types/jest": "27.0.2",
		"@types/node": "16.10.5",
		"jest": "27.2.5",
		"nodemon": "2.0.13",
		"prettier": "2.4.1",
		"prisma": "^2.30.1",
		"ts-jest": "27.0.5",
		"ts-node": "10.3.0",
		"typescript": "4.4.4"
	}
}
